# Builder Service Configuration
BUILDER_LOG_LEVEL="$LOG_LEVEL"
BUILDER_ENVIRONMENT="$ENVIRONMENT"
BUILDER_DATABASE_URL="$DATABASE_URL"
BUILDER_NATS_URLS="$NATS_URLS"
