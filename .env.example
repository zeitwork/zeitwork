# Zeitwork server configuration
# Copy to .env and fill in values

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:6432/zeitwork?sslmode=disable"       # PgBouncer pooled connection
DATABASE_DIRECT_URL="postgresql://postgres:postgres@localhost:5432/zeitwork?sslmode=disable" # Direct connection (for WAL replication)

# Networking
LOAD_BALANCER_IP=""       # Public IP for this server
INTERNAL_IP=""            # This server's VLAN IP for cross-server communication

# S3/MinIO (shared image storage)
S3_ENDPOINT="localhost:9000"
S3_BUCKET="zeitwork-images"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_USE_SSL="false"

# Docker registry
DOCKER_REGISTRY_URL="ghcr.io/zeitwork"
DOCKER_REGISTRY_USERNAME=""
DOCKER_REGISTRY_PAT=""    # GitHub PAT with write:packages scope

# GitHub App
GITHUB_APP_ID=""
GITHUB_APP_PRIVATE_KEY="" # base64-encoded PEM

# Encryption
ENCRYPTION_KEY=""         # 32-byte hex-encoded AES-256 key
