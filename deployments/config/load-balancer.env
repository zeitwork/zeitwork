# Zeitwork L4 Load Balancer Configuration
# Copy this file to /etc/zeitwork/load-balancer.env and update values

# Service configuration
PORT=8082              # TCP port for load balancing
HEALTH_PORT=8083       # HTTP port for health checks and monitoring
LOG_LEVEL=info
ENVIRONMENT=production

# Operator connection
OPERATOR_URL=http://localhost:8080

# Load balancing algorithm: round-robin, least-connections, or ip-hash
LB_ALGORITHM=round-robin
