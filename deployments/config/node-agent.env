# Zeitwork Node Agent Configuration
# Copy this file to /etc/zeitwork/node-agent.env and update values

# Service configuration
PORT=8081
LOG_LEVEL=info
ENVIRONMENT=production

# Operator connection
OPERATOR_URL=http://localhost:8080

# Node identification (optional - will be auto-generated if not set)
NODE_ID=

# Firecracker configuration
FIRECRACKER_BIN=/usr/bin/firecracker
FIRECRACKER_SOCKET=/tmp/firecracker.socket
VM_WORK_DIR=/var/lib/firecracker/vms
