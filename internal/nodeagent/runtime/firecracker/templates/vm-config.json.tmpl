{
  "boot-source": {
    "kernel_image_path": "{{.KernelImagePath}}",
    "boot_args": "{{.BootArgs}}"
  },
  "drives": [
    {
      "drive_id": "rootfs",
      "path_on_host": "{{.RootfsPath}}",
      "is_root_device": true,
      "is_read_only": false
    }
  ],
  "network-interfaces": [
    {
      "iface_id": "eth0",
      "host_dev_name": "{{.TapDevice}}"
    }
  ],
  "machine-config": {
    "vcpu_count": {{.VCPUCount}},
    "mem_size_mib": {{.MemSizeMiB}}
  },
  "logger": {
    "log_path": "{{.LogPath}}",
    "level": "Debug",
    "show_level": true,
    "show_log_origin": true
  },
  "metrics": {
    "metrics_path": "{{.MetricsPath}}"
  }
}


